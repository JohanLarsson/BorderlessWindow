<Application
    x:Class="BorderlessWindow.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Geometry x:Key="WindowMinimizeGeometry">F1M0,0L100,0 100,10 0,10 0,0z</Geometry>
        <Geometry x:Key="WindowMaximizeGeometry">F1M10,10L10,90 90,90 90,10 10,10z M0,0L100,0 100,100 0,100 0,0z</Geometry>
        <Geometry x:Key="WindowRestoreGeometry">F1M10,30L10,90 70,90 70,30 10,30z M30,10L30,20 80,20 80,70 90,70 90,10 30,10z M20,0L100,0 100,80 80,80 80,100 0,100 0,20 20,20 20,0z</Geometry>
        <Geometry x:Key="WindowCloseGeometry">F1M6,0L50,44 94,0 100,6 56,50 100,94 94,100 50,56 6,100 0,94 44,50 0,6 6,0z</Geometry>

        <Style x:Key="IconStyle" TargetType="{x:Type Shape}">
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Stretch" Value="Uniform" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Height" Value="10" />
            <Setter Property="Fill" Value="#FF808080" />
            <Setter Property="StrokeThickness" Value="0" />
            <Setter Property="Stroke" Value="{x:Null}" />
        </Style>
    </Application.Resources>
</Application>
